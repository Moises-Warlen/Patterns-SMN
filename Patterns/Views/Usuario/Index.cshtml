@model IEnumerable<Patterns.Models.Usuario>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<!-- Ícones do Bootstrap -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- define largura e centraliza com row acima -->
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="mb-0 text-dark">@ViewData["Title"]</h4>
                        <a class="btn btn-primary" asp-action="Create" style="background-color: #00E676; border-color: #00E676; ">
                            <i class="bi bi-plus-circle me-1"></i> Novo Usuário
                        </a>

                    </div>

                    <div class="table-responsive">
                        <table class="table table-hover table-bordered align-middle">
                            <thead style="background-color: #808080; color: #000000; ">

                                <tr>
                                    <th style="width: 80px;">Código</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Perfil</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Model)
                                {
                                    <tr>
                                        <td>@usuario.cod_usuario</td>
                                        <td>@usuario.nome</td>
                                        <td>@usuario.email</td>
                                        <td>
                                            @if (usuario.ind_admin)
                                            {
                                                <span class="badge bg-success">Admin</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Padrão</span>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-sm" style="background-color: #00E676; color: #fff;" asp-action="Edit" asp-route-id="@usuario.cod_usuario">
                                                <i class="bi bi-pencil-square"></i> Editar
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
