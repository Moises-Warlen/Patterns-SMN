<!DOCTYPE html>
<html lang="pt-br">
<head>
    <!-- Meta tags básicas para definição de charset e responsividade -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Patterns</title>

    <!-- Ícones e estilos externos (Font Awesome, Bootstrap Icons, Bootstrap, Devicon) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css">

    <link rel="stylesheet" href="~/css/styles.css">

    <!-- Ícone da aba (favicon) -->
    <link rel="icon" type="image/x-icon" href="~/IMG/iconeSMN.ico">
</head>
<body>
    <header>
        <!-- Barra superior fixa (topbar) -->
        <div class="topbar">
            <div class="logo"><img src="~/IMG/_logoSmn.png" alt=""></div>

            <!-- Barra de pesquisa no canto direito -->
            <div class="search-bar">
                <input type="text" placeholder="Pesquisar...">
                <button><i class="fas fa-search"></i></button>
            </div>
        </div>

        <!-- Menu lateral fixo (sidebar) -->
        <nav class="sidebar" id="sidebar">
            <!-- Botão para abrir/fechar o menu -->
            <div class="menu-toggle" onclick="toggleMenu()">
                <i class="fas fa-bars"></i>
            </div>

            <!-- Links de navegação principais -->
            <a class="menu-item" href="@Url.Action("Index", "Home")">
                <i class="fas fa-home"></i> <span>Página Inicial</span>
            </a>
            <a class="menu-item" href="@Url.Action("Index", "Usuario")">
                <i class="fas fa-user"></i> <span>Usuarios</span>
            </a>

            <!-- Itens com submenu (abre/fecha via JS) -->
            <div class="submenu"></div>

            <div class="menu-item" onclick="toggleSubmenu(this)">
                <i class="fas fa-database"></i> <span>SQL</span>
            </div>
            <div class="submenu">
                <a href="#">Patters</a>
                <a href="#">Ajudas</a>
                <a href="#">Erros</a>
            </div>

            <div class="menu-item" onclick="toggleSubmenu(this)">
                <i class="devicon-csharp-plain"></i> <span>C#</span>
            </div>
            <div class="submenu">
                <a href="#">Patters</a>
                <a href="#">Ajudas</a>
                <a href="#">Erros</a>
            </div>

            <div class="menu-item" onclick="toggleSubmenu(this)">
                <i class="fab fa-js"></i> <span>JavaScript</span>
            </div>
            <div class="submenu">
                <a href="#">Patters</a>
                <a href="#">Ajudas</a>
                <a href="#">Erros</a>
                <a href="#">UIKit</a>
            </div>

            <div class="menu-item" onclick="toggleSubmenu(this)">
                <i class="fab fa-css3-alt"></i> <span>CSS</span>
            </div>
            <div class="submenu">
                <a href="#">Patters</a>
                <a href="#">Ajudas</a>
                <a href="#">Erros</a>
                <a href="#">UIKit</a>
            </div>

            <div class="menu-item" onclick="toggleSubmenu(this)">
                <i class="fab fa-html5"></i> <span>HTML</span>
            </div>
            <div class="submenu">
                <a href="#">Patters</a>
                <a href="#">Ajudas</a>
                <a href="#">Erros</a>
            </div>

            <div class="menu-item" onclick="toggleSubmenu(this)">
                <i class="fas fa-sync-alt"></i> <span>Integrações</span>
            </div>
            <div class="submenu">
                <a href="#">Patters</a>
                <a href="#">Ajudas</a>
                <a href="#">Erros</a>
            </div>

            <div class="menu-item" onclick="toggleSubmenu(this)">
                <i class="fab fa-github"></i> <span>Git</span>
            </div>
            <div class="submenu">
                <a href="#">Patters</a>
                <a href="#">Ajudas</a>
                <a href="#">Erros</a>
            </div>
        </nav>
    </header>

    <!-- Área principal onde o conteúdo da página é inserido dinamicamente -->
    <main class="content">
        @RenderBody() <!-- MVC: Renderiza o conteúdo da view -->
    </main>

    <!-- Scripts JS do projeto -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/script.js"></script>
</body>
</html>
